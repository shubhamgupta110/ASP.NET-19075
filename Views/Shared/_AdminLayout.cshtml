@* Views/Shared/_AdminLayout.cshtml *@
@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Panel";
    var userName = Context.Session.GetString("UserName") ?? "Admin";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - HotelManagement</title>

    <!-- Bootstrap 5 (use CDN or local files) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Optional icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <style>
        :root {
            --admin-sidebar-bg: #0b57b0; /* dark blue */
            --admin-sidebar-text: #ffffff;
            --admin-accent: #0d6efd;
            --admin-content-bg: #f7fafc;
        }

        html, body {
            height: 100%;
            font-family: "Segoe UI", Roboto, "Poppins", sans-serif;
            background: var(--admin-content-bg);
        }

        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* SIDEBAR */
        .admin-sidebar {
            width: 260px;
            background: var(--admin-sidebar-bg);
            color: var(--admin-sidebar-text);
            flex-shrink: 0;
            transition: all .25s ease;
        }

            .admin-sidebar .brand {
                padding: 20px;
                display: flex;
                align-items: center;
                gap: 12px;
                border-bottom: 1px solid rgba(255,255,255,0.06);
            }

                .admin-sidebar .brand img {
                    width: 40px;
                    height: 40px;
                    object-fit: cover;
                    border-radius: 6px;
                    background: white;
                    padding: 4px;
                }

                .admin-sidebar .brand h4 {
                    margin: 0;
                    font-weight: 700;
                    color: #fff;
                }

            .admin-sidebar .nav-link {
                color: rgba(255, 255, 255, 0.92);
                padding: 14px 20px;
                display: block;
                border-left: 4px solid transparent;
                transition: all .15s ease;
            }

                .admin-sidebar .nav-link .bi {
                    margin-right: 10px;
                    font-size: 1.05rem;
                }

                .admin-sidebar .nav-link:hover {
                    background: rgba(255,255,255,0.05);
                    text-decoration: none;
                    color: #fff;
                    border-left-color: rgba(255,255,255,0.18);
                }

                .admin-sidebar .nav-link.active {
                    background: rgba(255,255,255,0.06);
                    color: #fff;
                    border-left-color: #ffd54d;
                }

            .admin-sidebar .sidebar-footer {
                margin-top: auto;
                padding: 18px 20px;
                border-top: 1px solid rgba(255,255,255,0.06);
                font-size: 14px;
            }

        /* MAIN */
        .admin-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .admin-topbar {
            background: #fff;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 12px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .admin-topbar .page-title {
                font-weight: 600;
                font-size: 1.25rem;
                color: #0b3d91;
            }

        .admin-content {
            padding: 28px 32px;
            flex: 1;
        }

        .card-rounded {
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(16,24,40,0.06);
        }

        /* responsive */
        @@media (max-width: 900px) {
            .admin-sidebar

        {
            width: 70px;
        }

        .admin-sidebar .brand h4 {
            display: none;
        }

        .admin-sidebar .nav-link {
            padding: 12px;
            font-size: 0.95rem;
        }

            .admin-sidebar .nav-link span.text {
                display: none;
            }

        }
    </style>

    @RenderSection("Head", required: false)
</head>
<body>
    <div class="admin-wrapper">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar d-flex flex-column">
            <div class="brand">
                <img src="~/images/hotel-icon.png" alt="logo" />
                <h4>Admin Panel</h4>
            </div>

            <nav class="mt-3">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                   href="@Url.Action("Dashboard", "Admin")">
                    <i class="bi bi-speedometer2"></i> <span class="text">Dashboard</span>
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ManageUsers" ? "active" : "")"
                   href="@Url.Action("ManageUsers", "Admin")">
                    <i class="bi bi-people"></i> <span class="text">Manage Users</span>
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ManageRooms" ? "active" : "")"
                   href="@Url.Action("ManageRooms", "Admin")">
                    <i class="bi bi-house"></i> <span class="text">Manage Rooms</span>
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Bookings" ? "active" : "")"
                   href="@Url.Action("Bookings", "Admin")">
                    <i class="bi bi-journal-check"></i> <span class="text">Bookings</span>
                </a>
            </nav>

            <div class="sidebar-footer mt-auto">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <small class="d-block text-white-50">Signed in as</small>
                        <strong>@userName</strong>
                    </div>
                    <div>
                        <a href="@Url.Action("Logout", "User")" class="btn btn-sm btn-danger">Logout</a>
                    </div>
                </div>
            </div>
        </aside>

        <!-- MAIN -->
        <main class="admin-main">
            <div class="admin-topbar">
                <div class="page-title">@title</div>

                <div class="d-flex align-items-center gap-3">
                    <div class="me-3 text-muted small">Hello, <strong>@userName</strong></div>
                    <div>
                        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary btn-sm"><i class="bi bi-house-door"></i> Home</a>
                    </div>
                </div>
            </div>

            <div class="admin-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
