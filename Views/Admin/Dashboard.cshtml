@model IEnumerable<HotelManagement.Models.User>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="card card-rounded p-4">
    <h5 class="text-primary">Registered Users</h5>
    <p class="text-muted small">Overview of registered users (click to manage)</p>

    <div class="table-responsive mt-3">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
