@{
    ViewData["Title"] = "User Dashboard";
    var userName = ViewBag.UserName ?? "Guest";
}

<style>
    body {
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        font-family: 'Segoe UI', sans-serif;
    }

    .dashboard-container {
        margin-top: 70px;
        text-align: center;
    }

    .dashboard-heading {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .card-body a {
        text-decoration: none;
        color: white;
        background-color: #007bff;
        padding: 8px 15px;
        border-radius: 5px;
        display: inline-block;
        margin-top: 10px;
    }

        .card-body a:hover {
            background-color: #0056b3;
        }
</style>

<div class="container dashboard-container">
    <h2 class="dashboard-heading">Welcome, @userName 👋</h2>
    <p class="text-muted mb-4">What would you like to do today?</p>

    <div class="row justify-content-center">
        <div class="col-md-3 mb-4">
            <div class="card p-3">
                <div class="card-body">
                    <h5 class="card-title">View Rooms</h5>
                    <p class="card-text">Explore available rooms and make your booking.</p>
                    <a asp-controller="Rooms" asp-action="Index">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card p-3">
                <div class="card-body">
                    <h5 class="card-title">My Bookings</h5>
                    <p class="card-text">See your current and past bookings.</p>
                    <a asp-controller="Bookings" asp-action="MyBookings">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card p-3">
                <div class="card-body">
                    <h5 class="card-title">My Profile</h5>
                    <p class="card-text">View or update your personal details.</p>
                    <a asp-controller="User" asp-action="Profile">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card p-3">
                <div class="card-body">
                    <h5 class="card-title">Logout</h5>
                    <p class="card-text">Leave the application securely.</p>
                    <a asp-controller="User" asp-action="Logout">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>
